{
	"compilerOptions": {
		"target": "ES6",
		"baseUrl": ".",
		"rootDirs": ["src"],
		"lib": ["dom", "es5", "es6", "es7", "es2017"],
		"jsx": "react",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"declaration": true,
		"paths": {
			"*": ["src/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/node_modules/*"]
}
